<div class="px-4 py-5">

  <!-- <div class="d-flex flex-column flex-md-row p-3 gap-4 py-md5 align-items-center justify-content-center"> -->
  <div class="row g-5">
    <div class="col-12 col-lg-6">
      <h3>Retros you lead</h3>
      <div class="list-group">
        <% @retros.each do |retro| %>
          <a href="<%= retro_path(retro) %>" class="list-group-item list-group-item-action d-flex gap-3 py-3">
            <div class="d-flex gap-2 w-100 justify-content-between">
              <div>
                <h5 class="mb-0"><%= retro.description %></h5>
                <p class="mb-0 opacity-75"><%= retro.retro_date %></p>
                <p class="mb-0 opacity-75">Participants: <%= retro.participants.length %></p>
              </div>
              <div>
                <p class="mb-1 opacity-50"><%= retro.state %></p>
              </div>
            </div>
          </a>
        <% end %>
      </div>
      <%= link_to "Why not create a new Retro?", new_retro_path %>
    </div>
    <div class="col-12 col-lg-6">
      <h3>Retros you participate in</h3>
      <% if @guest_retros.empty? %>
        <p>Embarrassingly, there's nothing here...</p>
      <% else %>

      <% end %>
    </div>
  </div>

</div>
