<div class="m-auto px-4 py-5" style="max-width: 576px;">
  <h2>Edit your Retro</h2>

  <%= render "form", retro: @retro %>
  <%= link_to "Back to your retro", retro_path(@retro) %>
  
  <hr />

  <h4>Forget this retro</h4>

  <%= link_to "Delete all of this retro's data",
    retro_path(@retro),
    data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
    },
    class: "my-2 btn btn-warning" %>
</div>
